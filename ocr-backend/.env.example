# Gemini API Configuration (Required)
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-3-pro-preview
GEMINI_EMBEDDING_MODEL=text-embedding-004
GEMINI_TEMPERATURE=0.0
GEMINI_MAX_OUTPUT_TOKENS=65536

# Gemini Timeout and Retry Configuration
GEMINI_TIMEOUT_SECONDS=120
GEMINI_MAX_RETRIES=3

# PDF Chunking Configuration (for large documents)
# Number of pages to process per chunk (1 = one page at a time for granular progress tracking)
# Documents with more than LARGE_FILE_PAGE_THRESHOLD pages will use chunking approach
CHUNK_SIZE_PAGES=1
LARGE_FILE_THRESHOLD_MB=5.0
LARGE_FILE_PAGE_THRESHOLD=1

# MongoDB Configuration (Optional - uses in-memory storage if not configured)
# MONGODB_URI=mongodb://localhost:27017/ocr_db
# MONGODB_DATABASE=ocr_db

# MinIO Configuration (Optional - uses local storage if not configured)
# MINIO_ENDPOINT=localhost:9000
# MINIO_ACCESS_KEY=minioadmin
# MINIO_SECRET_KEY=minioadmin
# MINIO_BUCKET=documents
# MINIO_USE_SSL=false

# Local Storage Configuration (Used when MinIO is not configured)
UPLOAD_DIR=./uploads

# Redis Configuration (Required for Celery)
REDIS_URL=redis://localhost:6379/0

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
CELERY_WORKER_CONCURRENCY=4
CELERY_TASK_TIME_LIMIT=3600
CELERY_TASK_SOFT_TIME_LIMIT=3300
CELERY_WORKER_PREFETCH_MULTIPLIER=4
CELERY_WORKER_MAX_TASKS_PER_CHILD=1000

# Server Configuration
PORT=8000
HOST=0.0.0.0
DEBUG=false

# CORS Configuration (comma-separated list of origins, or "*" for all)
CORS_ORIGINS=*

# Logging
LOG_LEVEL=INFO
